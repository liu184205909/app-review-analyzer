# Database
DATABASE_URL="postgresql://user:password@localhost:5432/app_review_analyzer?schema=public"

# OpenRouter API (推荐)
OPENROUTER_API_KEY="sk-or-v1-your-api-key-here"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"

# Redis (可选，用于缓存)
REDIS_URL="redis://localhost:6379"

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Rate Limiting
FREE_USER_WEEKLY_LIMIT=3
PRO_USER_MONTHLY_COMPARISON_LIMIT=20

# AI Model Configuration
DEFAULT_MODEL_FREE="deepseek/deepseek-chat"
DEFAULT_MODEL_PRO="anthropic/claude-3.5-sonnet"

# Feature Flags
ENABLE_SUBSCRIPTIONS="false"  # Set to "true" to enable subscription features
NEXT_PUBLIC_ENABLE_SUBSCRIPTIONS="false"  # Frontend feature flag

# Stripe Configuration (only needed if ENABLE_SUBSCRIPTIONS is "true")
# STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
# STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
# STRIPE_PRICE_PRO_MONTHLY="price_xxx"
# STRIPE_PRICE_PRO_YEARLY="price_xxx"
# STRIPE_PRICE_TEAM_MONTHLY="price_xxx"
# STRIPE_PRICE_TEAM_YEARLY="price_xxx"

# Authentication
NEXTAUTH_URL="http://localhost:3000"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# Google OAuth (optional)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

